@using Elearn.Shared.Dtos
@inject NavigationManager navMgr
@inject IStringLocalizer<App> Localizer


<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h5">@University.Name</MudText>
        <MudText Typo="Typo.body2">@University.Description</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="GoToUrl">@Localizer["view-lectures-text"]</MudButton>
    </MudCardActions>
</MudCard>


@code {

    [Parameter]
    public UniversityDto University { get; set; }

    private void GoToUrl()
    {
        navMgr.NavigateTo($"/Universities/{University.Id}/lectures");
    }

}